@{
    ViewData["Title"] = "Home Page";
}
@model ProjectListViewModel
<header>
    
</header>

@foreach (var x in Model.Books)
{//Outputs database
    <div class="card card-outline-primary m-1 p-1 text-center" style="width: 40rem;">
        <div class="bg-faded p-1">
            <h4>Book Title: @x.Title</h4>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Author First Name: @x.AuthorFirstName</li>
                <li class="list-group-item">Author Last Name: @x.AuthorLastName</li>
                <li class="list-group-item">Publisher: @x.Publisher</li>
                <li class="list-group-item">ISBN: @x.ISBN</li>
                <li class="list-group-item">Classification: @x.Classification</li>
                <li class="list-group-item">Category: @x.Category</li>
                <li class="list-group-item">Price: $@x.Price</li>
                <li class="list-group-item">Pages: @x.PageNum</li>
            </ul>
        </div>
    </div>
}
<div asp-validation-summary="All"></div>

<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     class="btn-group pull-right m-1"></div>